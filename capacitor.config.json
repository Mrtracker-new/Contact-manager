{
  "appId": "io.yourname.contactmanager",
  "appName": "RNR Contact Manager",
  "webDir": "build",
  "bundledWebRuntime": false,
  "plugins": {
    "Filesystem": {
      "androidPublicDirectory": "DOCUMENTS"
    }
  },
  "server": {
    "androidScheme": "https",
    "allowNavigation": ["*"]
  },
  "android": {
    "webContentsDebuggingEnabled": true,
    "allowMixedContent": true,
    "captureInput": true,
    "initialFocus": true,
    "useLegacyBridge": false,
    "javaScriptHeapSize": 512
  }
}